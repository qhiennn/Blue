@{
    Layout = "_LayoutAdmin";
}
@model Project_Blue.Models.PostACmt

<div class="container__admin">
    <ul class="nav__admin">
        <li class="nav__manage">
            <form class="nav__manageAdmin">
                <button class="nav__btn--admin" type="submit">
                    Quản lý account admin
                </button>
            </form>
        </li>
        <li class="nav__manage">
            <form class="nav__managePost" > 
                <button class="nav__btn--admin" type="submit">
                    Quản lý bài post 
                </button>
            </form>
        </li>
        <li class="nav__manage">
            <form class="nav__manageUser" >
                <button class="nav__btn--admin" type="submit">
                    Quản lý account user
                </button>
            </form>
        </li>
    </ul>
    <div class="content__admin">
        <table class="content__admin-tb-user">
            <thead>
                <tr class="admin__tb-user-tr-head">
                    <th class="admin__tb-user-head">Delete Admin</th>
                    <th class="admin__tb-user-head">Id Admin</th>
                    <th class="admin__tb-user-head">UserName</th>
                    <th class="admin__tb-user-head">Password</th>
                    <th class="admin__tb-user-head">Họ tên</th>
                    <th class="admin__tb-user-head">Email</th>
                    <th class="admin__tb-user-head">Số điện thoại</th>
                    <th class="admin__tb-user-head">Image</th>
                    <th class="admin__tb-user-head">Gender</th>
                    <th class="admin__tb-user-head">Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var admin in Model.Admins)
                {
                    <tr class="admin__tb-user-tr-body">
                        <td class="admin__tb-user-body">
                            <form id="formDeleteAdmin" action="DeleteAdmin" method="post">
                                <input name="id" type="hidden" value="@admin.Idadmin" />
                                <button class="btn__delete_admin" type="submit">Delete</button>
                            </form>
                        </td>
                        <td class="admin__tb-user-body">@admin.Idadmin</td>
                        <td class="admin__tb-user-body">@admin.Username</td>
                        <td class="admin__tb-user-body">@admin.Password</td>
                        <td class="admin__tb-user-body">@admin.Name</td>
                        <td class="admin__tb-user-body">@admin.Gmail</td>
                        <td class="admin__tb-user-body">@admin.Sdt</td>
                        @if (admin.Image != null)
                        {
                            <td class="admin__tb-user-body">
                                <img style="width:50px;height:50px" src="@admin.Image" alt="Alternate Text" />
                            </td>
                        } else
                        {
                            <td class="admin__tb-user-body">No Image</td>
                        }
                        @if(admin.Gender != null)
                        {
                            <td class="admin__tb-user-body">@admin.GenderNavigation.GioiTinh1</td>
                        }
                        else
                        {
                            <td class="admin__tb-user-body">chưa có thông tin</td>
                        }
                        @if (admin.Date != null)
                        {
                            <td class="admin__tb-user-body">@admin.Date</td>
                        }
                        else
                        {
                            <td class="admin__tb-user-body">chưa có thông tin</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <form asp-action="Register" class="form__register_admin">
            <div class="form__register_admin-title">Đăng Ký Admin</div>
            <input asp-for="@Model.Admin.Gmail"
                   class="inp__register_admin" 
                   type="gmail" 
                   placeholder="Email" />

            <input asp-for="@Model.Admin.Username"
                   class="inp__register_admin"
                   type="text"
                   placeholder="Username" />
            <input asp-for="@Model.Admin.Password"
                   class="inp__register_admin"
                   type="password"
                   placeholder="Password" />
            <button type="submit" class="btn__register_admin">Đăng ký</button>
        </form>
    </div>
</div>
