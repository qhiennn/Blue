@{
    Layout = null;
}
<table class="content__admin-tb-user">
    <thead>
        <tr class="admin__tb-user-tr-head">
            <th class="admin__tb-user-head">Delete User</th>
            <th class="admin__tb-user-head">Id User</th>
            <th class="admin__tb-user-head">User Name</th>
            <th class="admin__tb-user-head">Password</th>
            <th class="admin__tb-user-head">Họ tên</th>
            <th class="admin__tb-user-head">Email</th>
            <th class="admin__tb-user-head">Image</th>
            <th class="admin__tb-user-head">Date</th>
            <th class="admin__tb-user-head">Gender</th>
            <th class="admin__tb-user-head">Status</th>
            <th class="admin__tb-user-head">Phone Number</th>
            <th class="admin__tb-user-head">Biography</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr class="admin__tb-user-tr-body">
                <td class="admin__tb-user-body">
                    <form id="formDeleteUser"  method="post">
                        <input name="id" type="hidden" value="@item.MaKhachHang" />
                        <button class="btn__delete_admin" type="submit">Delete</button>
                    </form>
                </td>
                <td class="admin__tb-user-body">@item.MaKhachHang</td>
                <td class="admin__tb-user-body">@item.UserName</td>
                <td class="admin__tb-user-body">@item.Password</td>
                <td class="admin__tb-user-body">@item.TenKhachHang</td>
                <td class="admin__tb-user-body">@item.Gmail</td>
                <td class="admin__tb-user-body">
                    <img style="width:50px;height:50px" src="@item.AnhDaiDien" alt="Alternate Text" />
                </td>
                @if (item.NgaySinh != null)
                {
                    <td class="admin__tb-user-body">@item.NgaySinh</td>
                }
                else
                {
                    <td class="admin__tb-user-body">chưa có thông tin</td>
                }
                @if (item.GioiTinh != null)
                {
                    <td class="admin__tb-user-body">@item.GioiTinhNavigation.GioiTinh1</td>
                }
                else
                {
                    <td class="admin__tb-user-body">chưa có thông tin</td>
                }
                @if (item.TrangThai != null)
                {
                    <td class="admin__tb-user-body">@item.TrangThaiNavigation.TrangThai1</td>
                }
                else
                {
                    <td class="admin__tb-user-body">chưa có thông tin</td>
                }
                @if (item.Sdt != null)
                {
                    <td class="admin__tb-user-body">@item.Sdt</td>
                }
                else
                {
                    <td class="admin__tb-user-body">chưa có thông tin</td>
                }
                @if (item.TieuSu != null)
                {
                    <td class="admin__tb-user-body">@item.TieuSu</td>
                }
                else
                {
                    <td class="admin__tb-user-body">chưa có thông tin</td>
                }
            </tr>
        }
    </tbody>
</table>